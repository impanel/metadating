/* AS3	Copyright 2009 Gali.*/package {		/**	 *	Class description.	 *	 *	@langversion ActionScript 3.0	 *	@playerversion Flash 9.0	 *	 *	@author Sven Krome	 *	@since  01.02.2009	 */	public class HotlineObject {				/**		 *	@Constructor		 */		public function HotlineObject(									  vidID:int									, myU:String									, myR:String									, myC:String									, myE:String									, myD:XMLList									, myT:XMLList									, di:XMLList									, ta:XMLList													){						videoID = vidID;			myURL = myU;			myRole = myR;			myCategory = myC;			myEskal = myE;						myDialogs = parseTags(myD);			myAttributes = parseTags(myT);			dialogs = parseTags(di);			attributes = parseTags(ta);						myMatchVar = 0;		}				//--------------------------------------		//  PUBLIC AND PRIVATE VARIABLES		//--------------------------------------		private var videoID:int;		private var myURL:String;		private var myCategory:String;		private var myRole:String;		private var myEskal:String;				//Parse-Arrays		private var myDialogs:Array;		private var myAttributes:Array;		private var dialogs:Array;		private var attributes:Array;				// Matchvariable		public var myMatchVar:int;		//--------------------------------------		//  GETTER/SETTERS		//--------------------------------------				public function get getID(): int {			return videoID;		}				public function get getUrl(): String {			return myURL;		}				public function get getMyRole(): String {			return myRole;		}				public function get getMyCategory(): String {			return myCategory;		}				public function get getMyEskalation(): String {			return myEskal;		}				public function get getMyDialogs(): Array {			return myDialogs;		}				public function get getMyAttributes(): Array {			return myAttributes;		}						public function get getDialogs(): Array {			return dialogs;		}				public function get getAttributes(): Array {			return attributes;		}						//--------------------------------------		//  PRIVATE & PROTECTED INSTANCE METHODS		//--------------------------------------		/* Alte Parsfunktionen 		private function parseMyTags (xml:XMLList) {			myTags = new Array ();			for each (var item in xml.tag){				if(item == "Universell"){					getUni=true;				}else{					myTags.push(item);				}			}		}		*/		private function parseTags (xml:XMLList):Array {			var _outVar:Array = [];			for each (var item in xml.tag){				if(item != "keine") _outVar.push(item);			}			return _outVar;		}	}}