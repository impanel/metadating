/* AS3	Copyright 2009 __MyCompanyName__.*/package {		/**	 *	Class description.	 *	 *	@langversion ActionScript 3.0	 *	@playerversion Flash 9.0	 *	 *	@author Sven Krome	 *	@since  01.02.2009	 */	public class BouncerObject {				/**		 *	@Constructor		 */		public function BouncerObject(									  vidID:int									, myU:String									, myR:String									, myC:String									, myT:XMLList									, ro:String									, cat:String									, ta:XMLList													){			videoID = vidID;			myURL = charSlice(myU);			myRole = myR;			myCategory = myC;			parseMyTags(myT);						myMatchVar = 0;						rolle = ro;			kategorie = cat;			parseTags(ta);				}				//--------------------------------------		//  PUBLIC AND PRIVATE VARIABLES		//--------------------------------------				//Eigenschaften		private var myURL:String;		private var myCategory:String;		private var myRole:String;		private var myTags:String;		//Flags		private var videoID:int;		public var myMatchVar:int;				private var getMyUni:Boolean;				//Bedingungen		private var rolle:String;		private var kategorie:String;		private var tags:String;		//--------------------------------------		//  GETTER/SETTERS		//--------------------------------------				public function get getID(): int {			return videoID;		}				public function get getUrl(): String {			return myURL;		}				public function get getMyRole(): String {			return myRole;		}				public function get getMyCategory(): String {			return myCategory;		}				public function get getUni(): Boolean {			return getMyUni;		}				public function get getMyTags(): String {			return myTags;		}				public function get getRolle(): String {			return rolle;		}				public function get getKategorie(): String {			return kategorie;		}						public function get getTags(): String {			return tags;		}						//--------------------------------------		//  PRIVATE & PROTECTED INSTANCE METHODS		//--------------------------------------						private function parseMyTags(xml:XMLList) {			for each (var item in xml.tag){				if(item == "Universell"){					getMyUni=true;					//trace("GetMyUni in Objekt: "+getMyUni);				}else{					myTags=item;				}			}		}				private function parseTags(xml:XMLList) {			for each (var item in xml.tag){				tags=item;			}		}				private function charSlice(_str:String):String{			if(_str.charAt(_str.length-1) == " "){ 				_str=_str.slice(0,_str.length-1);				return _str;			}else{				return _str;			}		}	}}