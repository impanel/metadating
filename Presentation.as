package  {		import flash.events.*;	import flash.display.*;	import flash.media.*;	import flash.text.*;	import flash.system.*;	import flash.text.AntiAliasType;	import Officina;	import com.greensock.*;	import com.greensock.events.TweenEvent;		public class Presentation extends Debug {				private var metaText:String;		private var format:TextFormat = new TextFormat();		private var presentationInfo:TextField = new TextField();		private var m:Number		private var myFont:Font = new Officina();		private var container:Object;		public var togglePresentation:Boolean = true;		public function Presentation(_container:Object) 		{			container = _container;		}				public function setupPresentationInfo(fontSize:int, font:String = null):void			{			format.color = 0xFFFFFF;			format.size = fontSize;			format.align = TextFormatAlign.RIGHT;			//format.font = font;			format.font = myFont.fontName;			//metaText = playListMeta[idx].getStrategy;		}				public function drawPresentationInfo(playListMeta:Array, idx:int):void		{			if(togglePresentation)			{				metaText = playListMeta[idx].getStrategy;				//metaText = "TEST";							presentationInfo.embedFonts = true;				presentationInfo.antiAliasType = AntiAliasType.ADVANCED;				presentationInfo.selectable = false;				presentationInfo.text = metaText;				presentationInfo.autoSize = TextFieldAutoSize.RIGHT;				presentationInfo.defaultTextFormat = format;				container.addChild(presentationInfo);						presentationInfo.x = 10;				presentationInfo.y = 675;				trace("Presentation Mode started");			}		}				public function clearThis():void		{			container.removeChild(presentationInfo);		}				public function blackFade(container:Object, posX:int, posY:int, sizeX:int, sizeY:int, color:int, myAlpha:Number):void		{			var mc:MovieClip = new MovieClip();			drawRect(mc, posX, posY, sizeX, sizeY, color, myAlpha);			container.addChild(mc);			TweenLite.to(mc, 3.0, {alpha:0.0, onComplete:removeFade});				function removeFade():void			{				//trace("removeFade");				container.removeChild(mc);			}					}	}	}